{
  "private": true,
  "name": "wyre",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "main": "index.js",
  "repository": "https://github.com/tecmie/wyre.git",
  "author": "Tecmie",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run build",
    "build": "nx run-many --target=build --all --parallel",
    "build:no-cache": "nx run-many --target=build --all --parallel --no-cache",
    "bootstrap": "nx run bootstrap",
    "pack": "nx add",
    "dev": "nx run-many --target=dev --all --parallel",
    "refresh": "npm run build && npm run dev",
    "lint": "nx run-many --target=lint --all --parallel",
    "lint:ts": "tsc --pretty --noEmit",
    "graph": "nx run graph",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pretty-format": "pretty-quick --staged"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "nx": "15.6.3",
    "pretty-quick": "^3.1.3"
  },
  "dependencies": {
    "husky": "^8.0.3",
    "superjson": "1.9.1"
  }
}
